<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>task list</title>
  <link rel="stylesheet" href="/style.css">
</head>

<body>
  <%-include('navbar') %>
    <div class="container">
      <h1>My Tasks</h1>
      <form class=" list-form" action="/multi-delete" method="post">
        <button class="delete-btn" style=" width: 200px;">Delete All Selected</button>
        <ul id="task-list">
          <%for(let task of result){ %>
            <li class="task-item">
              <div class="task-title">
                <%= task.title%>
              </div>
              <div class="task-massage">
                <%= task.massege%>
              </div>
              <div class="btns">
                <input type="checkbox" name="selectedTask" value="<%= task._id%>">
                <button class="delete-btn" type="submit" onclick=""><a href="/delete/<%= task._id%>">Delete</a></button>
                <button class="delete-btn" type="submit" onclick=""><a href="/update/<%= task._id%>">Update</a></button>
              </div>
            </li>
            <% } %>
        </ul>
      </form>
    </div>
</body>

</html>